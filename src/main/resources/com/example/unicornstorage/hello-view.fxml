<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER"
      spacing="20.0"
      prefHeight="529.0"
      prefWidth="894.0"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.unicornstorage.database_connect">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <children>

        <!-- PRZYCISKI OBOK SIEBIE -->
        <HBox spacing="15">
            <children>
                <Button fx:id="Ostrzezenie"
                        text="Ostrzeżenie"
                        onAction="#onOstrzezenie"/>

                <Button fx:id="Braki"
                        text="Braki"
                        onAction="#onBraki"/>

                <Button fx:id="Reset"
                        text="Reset"
                        onAction="#onReset"/>
            </children>
        </HBox>

        <TableView fx:id="tableMagazyn" prefHeight="515" prefWidth="854">
            <columns>
                <TableColumn fx:id="colId" text="Id"/>
                <TableColumn fx:id="colIlosc" text="Ilość"/>
                <TableColumn fx:id="colNazwa" text="Nazwa"/>
                <TableColumn fx:id="colProducent" text="Producent"/>
                <TableColumn fx:id="colKategoria" text="Kategoria"/>
                <TableColumn fx:id="colPodkategoria" text="Podkategoria"/>
                <TableColumn fx:id="colOpis" text="Opis"/>
            </columns>
        </TableView>

    </children>

</VBox>
